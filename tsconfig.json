{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "common/*.ts",
    "server/*.ts",
    // "client/**/*"
  ],
  "exclude": [
    "client/**/*"
  ],
  "files": [
    "./common/types.d.ts"
  ]
}